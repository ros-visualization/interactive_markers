<package>
    <description brief="Ogre Tools">
    
    A set of visualization tools for rendering things using Ogre3D.
    
    </description>
    <author>Josh Faust</author>
    <license>BSD</license>
    <review status="unreviewed" notes=""/>
    <url>http://pr.willowgarage.com/wiki/ROS</url>
    <depend package="wxswig"/>
    <depend package="ogre"/>
    <depend package="rosconsole"/>
    <depend package="boost"/>
    <depend package="roscpp"/> <!--Only need roscpp for the get_package_path function.  TODO: move that into rostools -->
    <export> 
        <cpp cflags="-I${prefix}/src/" lflags="-Wl,-rpath,${prefix}/lib -L${prefix}/lib -logre_tools"/>
        <python path="${prefix}/lib/"/>
    </export>
    <sysdepend os="ubuntu" version="7.04-feisty" package="libwxgtk2.8-dev"/>
    <sysdepend os="ubuntu" version="8.04-hardy" package="libwxgtk2.8-dev"/>
    <sysdepend os="ubuntu" version="8.10-intrepid" package="libwxgtk2.8-dev"/>
</package>

